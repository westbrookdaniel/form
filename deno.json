{
  "imports": {
    "react": "npm:react@18.2.0",
    "preact/": "https://esm.sh/preact@10.15.1/",
    "preact": "https://esm.sh/preact@10.15.1",
    "jsdom": "https://esm.sh/jsdom"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "dom.iterable"]
  },
  "tasks": {
    "build": "deno run -A scripts/npm.ts"
  },
  "lint": {
    "exclude": ["npm"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "exclude": ["npm"]
  }
}
